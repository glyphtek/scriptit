{
  "name": "@glyphtek/scriptit",
  "version": "0.4.0",
  "description": "A cross-runtime CLI and library for running scripts with environment management, TUI, and support for lambda functions. Optimized for Bun with compatibility for Node.js and Deno.",
  "author": "Sergio Romano <sergio.h.romano@gmail.com>",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "bun",
    "node",
    "deno",
    "cli",
    "scriptit",
    "tui",
    "automation",
    "environment",
    "lambda",
    "devex",
    "cross-runtime",
    "script-runner",
    "task-runner",
    "developer-tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glyphtek/scriptit.git"
  },
  "bugs": {
    "url": "https://github.com/glyphtek/scriptit/issues"
  },
  "homepage": "https://github.com/glyphtek/scriptit#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/sergiohromano"
  },
  "main": "./dist/lib.js",
  "module": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    }
  },
  "bin": {
    "scriptit": "./bin/scriptit.sh"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun clean && tsc",
    "build:bun": "bun clean && bun build ./src/lib.ts ./src/cli.ts --outdir ./dist --target bun --splitting --minify",
    "dev": "bun ./bin/scriptit.js",
    "dev:watch": "bun --watch ./bin/scriptit.js",
    "start": "bun ./bin/scriptit.js",
    "lint": "bunx @biomejs/biome lint ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "check": "bunx @biomejs/biome check --apply ./src",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build && bun test",
    "test": "bun test",
    "test:lib": "bun test tests/lib-example.test.ts tests/lib-integration.test.ts tests/run-lib-example.test.ts tests/default-function.test.ts tests/pwd-option.test.ts",
    "test:ui": "cd examples/ui && bun ../../bin/scriptit.js --no-tui",
    "test:examples": "cd examples/lib && bun start"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@types/blessed": "^0.1.25",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.11.20",
    "bun-types": "latest",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "publishConfig": {
    "access": "public"
  }
}
